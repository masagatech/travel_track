<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/DateAllOrder"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="2.5"
        android:gravity="center"
        android:text="DATE"
        android:background="@color/bb_inActiveBottomBarItemColor"
        android:textColor="#fff"
        android:textSize="16dp"
        android:fontFamily="sans-serif-light"/>

    <ImageView
        android:id="@+id/RejectedAllOrder"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:background="@color/orange_light"
        android:gravity="center"
        android:padding="5dp"
        android:visibility="gone"
        android:src="@drawable/push_order"
        android:textColor="#fff"
        android:textSize="18dp" />

    <TextView
        android:textColor="#fff"
        android:padding="5dp"
       android:drawableLeft="@drawable/accept"
        android:gravity="center"
        android:background="@color/green_light"
        android:textSize="12dp"
        android:layout_width="68dp"
        android:layout_height="50dp"
        android:text="DEL."/>

    <TextView
        android:layout_width="67dp"
        android:layout_height="50dp"
        android:background="@color/red_light"
        android:drawableLeft="@drawable/reject"
        android:gravity="center"
        android:padding="5dp"
        android:text="RET."
        android:textColor="#fff"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/TotalAllOrder"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:text="TOTAL"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:background="@color/bb_inActiveBottomBarItemColor"
        android:textColor="#fff"
        android:textSize="16dp" />


</LinearLayout>