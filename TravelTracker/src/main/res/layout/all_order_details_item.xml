<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/DateAllOrder"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="2.5"
        android:background="@color/bb_inActiveBottomBarItemColor"
        android:padding="5dp"
        android:text="01/21/17"
        android:gravity="center"
        android:fontFamily="sans-serif-light"
        android:textColor="#fff"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/RejectedAllOrder"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:background="@color/orange_light"
        android:gravity="center"
        android:padding="5dp"
        android:text="10"
        android:visibility="gone"
        android:textColor="#fff"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/DeliverAllOrder"
        android:textColor="#fff"
        android:padding="5dp"
        android:gravity="center"
        android:fontFamily="sans-serif-light"
        android:background="@color/green_light"
        android:textSize="18dp"
        android:layout_width="68dp"
        android:layout_height="match_parent"
        android:text="02"/>

    <TextView
        android:fontFamily="sans-serif-light"
        android:id="@+id/ReturnAllOrder"
        android:layout_width="67dp"
        android:layout_height="wrap_content"
        android:background="@color/red_light"
        android:gravity="center"
        android:padding="5dp"
        android:text="04"
        android:textColor="#fff"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/TotalAllOrder"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="5dp"
        android:text="10"
        android:background="@color/bb_inActiveBottomBarItemColor"
        android:textColor="#fff"
        android:fontFamily="sans-serif-light"
        android:textSize="18dp" />


</LinearLayout>