<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.masaga.goyorider.forms.dashboard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginRight="5dp"
            android:layout_weight="2.5"
            android:background="@android:color/holo_red_light"
            android:clickable="true"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:id="@+id/Complated_Orders"
                android:background="?android:attr/selectableItemBackground"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:src="@drawable/complated_orders" />

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:text="Complated Orders"
                    android:textColor="@color/white" />
            </FrameLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@android:color/holo_red_dark"
            android:clickable="true">
            <FrameLayout
                android:layout_width="match_parent"
                android:id="@+id/Rejected_Orders"
                android:background="?android:attr/selectableItemBackground"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/rejected_order"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    />

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Rejected Orders"
                    android:textColor="@color/white"
                    android:layout_marginBottom="15dp"
                    android:layout_gravity="bottom"/>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@android:color/holo_orange_dark"
            android:clickable="true">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/Pending_Order"
                android:background="?android:attr/selectableItemBackground">

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="50dp"
                    android:gravity="center"
                    android:text="Pending Order"
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/pending"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="40dp"
                    android:gravity="center"
                    android:src="@drawable/pending_order" />
            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1.2"
            android:orientation="vertical"
            android:background="@android:color/holo_green_dark"
            android:clickable="true">
            <FrameLayout
                android:layout_width="match_parent"
                android:id="@+id/All_Order"
                android:background="?android:attr/selectableItemBackground"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/all_order"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    />

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="All Orders"
                    android:textColor="@color/white"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="20dp"
                    />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginRight="5dp"
            android:layout_weight="2"
            android:layout_marginStart="5dp"
            android:orientation="vertical"
            android:background="@android:color/holo_blue_dark"
            android:clickable="true">

            <FrameLayout
                android:id="@+id/Cash_Collection"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:gravity="center"
                    android:src="@drawable/cash_collection" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="40dp"
                    android:gravity="center"
                    android:text="Cash Collection"
                    android:textColor="@color/white" />
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp"

            android:layout_marginLeft="5dp"
            android:layout_weight="0.6"
            android:orientation="vertical"
            android:background="@color/progressbar"
            android:clickable="true">
            <FrameLayout
                android:id="@+id/Notifications"
                android:layout_width="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/notification"
                android:gravity="center"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/textView28"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Notification"
                android:textColor="@color/white"
                android:layout_gravity="bottom"
                android:layout_marginBottom="15dp"/>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>
</ScrollView>
