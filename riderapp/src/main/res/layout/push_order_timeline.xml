<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        app:cardElevation="1dp"
        app:contentPadding="0dp">

        <LinearLayout
            android:id="@+id/PushOrders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="0dp"
            android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/order_ids"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:drawableLeft="@drawable/order_id"
                        android:gravity="center_vertical"
                        android:textColor="@android:color/black"
                        tools:text=" #12900" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/esitmated_time"
                        android:gravity="center_vertical"
                        android:textColor="@android:color/black"
                        tools:text=" 08.00" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/Alert"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="right"
                        android:paddingTop="8dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:paddingRight="5dp"
                        android:textColor="#000"
                        tools:text="( 8.30 )" />
                </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/marchent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/pending_deliver_at"
                    android:gravity="center_vertical"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    tools:text="Pizza hut, Pralhad nagar" />


                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/adress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp"
                    android:textColor="@android:color/black"
                    android:textSize="13sp"
                    tools:text="Sector 15, Navi mumbai,lbs road,raj legacy socity" />
            </LinearLayout>
            <TextView
                android:id="@+id/Cash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="234"
                android:drawableLeft="@drawable/cash_amount"
                android:gravity="center_vertical"
                android:textColor="#000"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"


                android:layout_marginTop="10dp"
                android:background="#cfcdcd"
                android:orientation="horizontal"
                android:padding="5dp">


                <TextView
                    android:id="@+id/rider"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:textColor="@android:color/black" />

                <Button
                    android:id="@+id/Btn_Push"
                    android:layout_width="54dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.4"
                    android:background="@color/green_light"
                    android:text="Push"
                    android:textColor="#fff" />
            </LinearLayout>
            </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>